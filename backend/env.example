# Application Environment
APP_ENV=development
APP_DEBUG=true
APP_NAME="ZH-Love Gaming Community"
APP_URL=http://localhost:4321
API_URL=http://localhost:8080

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=zh_love_db
DB_USER=root
DB_PASS=

# JWT Configuration
JWT_SECRET=your_super_secure_jwt_secret_key_here_change_in_production
JWT_ALGORITHM=HS256
JWT_EXPIRE_TIME=3600

# CORS Configuration
CORS_ORIGIN=http://localhost:4321
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_HEADERS=Content-Type,Authorization,X-Requested-With

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=../uploads
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,webp,mp4,avi,mov,zip,rar

# Email Configuration (for production)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_ENCRYPTION=tls
MAIL_FROM=noreply@zh-love.com
MAIL_FROM_NAME="ZH-Love Community"

# External APIs
YOUTUBE_API_KEY=your_youtube_api_key_here
CHALLONGE_API_KEY=your_challonge_api_key_here

# Security
BCRYPT_ROUNDS=12
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# Admin Configuration
ADMIN_USERNAME=admin
ADMIN_EMAIL=admin@zh-love.com
ADMIN_PASSWORD=Admin@123456

# Session Configuration
SESSION_NAME=zh_love_session
SESSION_LIFETIME=86400
SESSION_SECURE=false
SESSION_HTTPONLY=true 
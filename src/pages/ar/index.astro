---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getLangFromUrl } from '../../utils/i18n';

const lang = 'ar';

// بيانات وهمية للعرض - في التطبيق الحقيقي، ستأتي من API
const stats = {
  totalUsers: 15420,
  activeTournaments: 8,
  totalClans: 156,
  onlineUsers: 847,
};

const featuredTournaments = [
  {
    id: 1,
    name: 'بطولة الملوك الكبرى',
    participants: 64,
    prizePool: 5000,
    status: 'registration',
    startDate: '2024-02-15',
  },
  {
    id: 2,
    name: 'كأس العشائر',
    participants: 32,
    prizePool: 2500,
    status: 'ongoing',
    startDate: '2024-01-20',
  },
];

const topClans = [
  { name: 'نسور الصحراء', points: 15420, members: 45 },
  { name: 'محاربو العاصفة', points: 14850, members: 38 },
  { name: 'صقور النار', points: 13920, members: 42 },
];

const recentPosts = [
  {
    title: 'استراتيجيات جديدة للعب الجنرال الصيني',
    author: 'ProGamer2024',
    replies: 23,
    timeAgo: 'منذ ساعتين',
  },
  {
    title: 'نصائح للمبتدئين في زيرو آور',
    author: 'ZHMaster',
    replies: 45,
    timeAgo: 'منذ 4 ساعات',
  },
];
---

<BaseLayout 
  title="ZH-Love - مجتمع جنرالز زيرو آور"
  description="المنصة الرسمية للاعبي جنرالز زيرو آور مع البطولات والعشائر والمنتديات"
>
  <!-- Hero Section -->
  <section class="relative py-20 overflow-hidden">
    <!-- Background Effects -->
    <div class="absolute inset-0 bg-gradient-to-br from-background via-background to-gunmetal-gray"></div>
    <div class="absolute inset-0 bg-military-pattern opacity-5"></div>
    
    <!-- Animated Background Elements -->
    <div class="absolute top-10 left-10 w-20 h-20 bg-primary/10 rounded-full animate-float"></div>
    <div class="absolute top-40 right-20 w-16 h-16 bg-secondary/10 rounded-full animate-float" style="animation-delay: 1s;"></div>
    <div class="absolute bottom-20 left-1/4 w-12 h-12 bg-accent/10 rounded-full animate-float" style="animation-delay: 2s;"></div>

    <div class="container-custom relative z-10">
      <div class="text-center max-w-4xl mx-auto">
        <!-- Main Heading -->
        <h1 class="text-5xl md:text-7xl font-bold text-gradient mb-6 animate-fade-in-up">
          مجتمع جنرالز زيرو آور
        </h1>
        
        <!-- Subtitle -->
        <p class="text-xl md:text-2xl text-muted-foreground mb-8 animate-fade-in-up" style="animation-delay: 0.2s;">
          انضم إلى أكبر مجتمع للاعبي جنرالز زيرو آور في الشرق الأوسط
        </p>

        <!-- CTA Buttons -->
        <div class="flex flex-col sm:flex-row gap-4 justify-center items-center mb-12 animate-fade-in-up" style="animation-delay: 0.4s;">
          <a href="/ar/register" class="btn btn-primary btn-xl px-8 py-4 text-lg hover-lift">
            انضم الآن مجاناً
          </a>
          <a href="/ar/tournaments" class="btn btn-outline btn-xl px-8 py-4 text-lg hover-lift">
            شاهد البطولات
          </a>
        </div>

        <!-- Live Stats -->
        <div class="grid grid-cols-2 md:grid-cols-4 gap-6 max-w-3xl mx-auto animate-fade-in-up" style="animation-delay: 0.6s;">
          <div class="military-card text-center p-4">
            <div class="text-2xl md:text-3xl font-bold text-primary">{stats.totalUsers.toLocaleString()}</div>
            <div class="text-sm text-muted-foreground">لاعب مسجل</div>
          </div>
          <div class="military-card text-center p-4">
            <div class="text-2xl md:text-3xl font-bold text-secondary">{stats.onlineUsers.toLocaleString()}</div>
            <div class="text-sm text-muted-foreground">متصل الآن</div>
          </div>
          <div class="military-card text-center p-4">
            <div class="text-2xl md:text-3xl font-bold text-accent">{stats.activeTournaments}</div>
            <div class="text-sm text-muted-foreground">بطولة نشطة</div>
          </div>
          <div class="military-card text-center p-4">
            <div class="text-2xl md:text-3xl font-bold text-victory-gold">{stats.totalClans}</div>
            <div class="text-sm text-muted-foreground">عشيرة</div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Features Section -->
  <section class="py-20 bg-card/50">
    <div class="container-custom">
      <div class="text-center mb-16">
        <h2 class="text-4xl font-bold mb-4">
          ميزات المنصة
        </h2>
        <p class="text-xl text-muted-foreground max-w-2xl mx-auto">
          اكتشف جميع الميزات التي تجعل ZH-Love المنصة المثالية للاعبي جنرالز زيرو آور
        </p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        <!-- Tournaments Feature -->
        <div class="military-card p-6 hover-lift">
          <div class="w-12 h-12 bg-primary rounded-lg flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-bold mb-2">
            البطولات المتقدمة
          </h3>
          <p class="text-muted-foreground">
            شارك في بطولات احترافية مع نظام إدارة متطور وجوائز حقيقية
          </p>
        </div>

        <!-- Clans Feature -->
        <div class="military-card p-6 hover-lift">
          <div class="w-12 h-12 bg-secondary rounded-lg flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-bold mb-2">
            نظام العشائر
          </h3>
          <p class="text-muted-foreground">
            انشئ عشيرتك أو انضم لعشيرة وتنافس مع العشائر الأخرى
          </p>
        </div>

        <!-- Forum Feature -->
        <div class="military-card p-6 hover-lift">
          <div class="w-12 h-12 bg-accent rounded-lg flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-bold mb-2">
            منتدى تفاعلي
          </h3>
          <p class="text-muted-foreground">
            ناقش الاستراتيجيات وشارك التجارب مع اللاعبين الآخرين
          </p>
        </div>

        <!-- Replays Feature -->
        <div class="military-card p-6 hover-lift">
          <div class="w-12 h-12 bg-victory-gold rounded-lg flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-black" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.828 14.828a4 4 0 01-5.656 0M9 10h1.586a1 1 0 01.707.293l2.414 2.414a1 1 0 00.707.293H15M9 10V9a4 4 0 118 0v1M9 10v5a4 4 0 008 0v-5"></path>
            </svg>
          </div>
          <h3 class="text-xl font-bold mb-2">
            مكتبة المقاطع
          </h3>
          <p class="text-muted-foreground">
            ارفع وشارك مقاطع مبارياتك واستفد من مقاطع المحترفين
          </p>
        </div>

        <!-- Rankings Feature -->
        <div class="military-card p-6 hover-lift">
          <div class="w-12 h-12 bg-command-blue rounded-lg flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-bold mb-2">
            نظام التصنيف
          </h3>
          <p class="text-muted-foreground">
            تابع ترتيبك وتقدمك مع نظام تصنيف شامل ودقيق
          </p>
        </div>

        <!-- Streamers Feature -->
        <div class="military-card p-6 hover-lift">
          <div class="w-12 h-12 bg-alert-red rounded-lg flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-bold mb-2">
            منصة البث
          </h3>
          <p class="text-muted-foreground">
            تابع أفضل المذيعين وتعلم من خبراتهم المباشرة
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Featured Tournaments -->
  <section class="py-20">
    <div class="container-custom">
      <div class="flex items-center justify-between mb-12">
        <div>
          <h2 class="text-3xl font-bold mb-2">
            البطولات المميزة
          </h2>
          <p class="text-muted-foreground">
            أحدث البطولات والمنافسات
          </p>
        </div>
        <a href="/ar/tournaments" class="btn btn-outline">
          عرض الكل
        </a>
      </div>

      <div class="grid md:grid-cols-2 gap-6">
        {featuredTournaments.map((tournament) => (
          <div class="military-card p-6 hover-lift">
            <div class="flex items-start justify-between mb-4">
              <h3 class="text-xl font-bold">{tournament.name}</h3>
              <span class={`px-2 py-1 rounded text-xs font-medium ${
                tournament.status === 'registration' 
                  ? 'bg-primary/20 text-primary' 
                  : 'bg-accent/20 text-accent'
              }`}>
                {tournament.status === 'registration' 
                  ? 'التسجيل مفتوح'
                  : 'جارية'
                }
              </span>
            </div>
            <div class="grid grid-cols-2 gap-4 mb-4">
              <div>
                <div class="text-2xl font-bold text-primary">{tournament.participants}</div>
                <div class="text-sm text-muted-foreground">
                  مشارك
                </div>
              </div>
              <div>
                <div class="text-2xl font-bold text-victory-gold">${tournament.prizePool}</div>
                <div class="text-sm text-muted-foreground">
                  مجموع الجوائز
                </div>
              </div>
            </div>
            <a href={`/ar/tournaments/${tournament.id}`} class="btn btn-primary btn-sm w-full">
              عرض التفاصيل
            </a>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Top Clans -->
  <section class="py-20 bg-card/50">
    <div class="container-custom">
      <div class="flex items-center justify-between mb-12">
        <div>
          <h2 class="text-3xl font-bold mb-2">
            أفضل العشائر
          </h2>
          <p class="text-muted-foreground">
            العشائر الأقوى في المجتمع
          </p>
        </div>
        <a href="/ar/clans" class="btn btn-outline">
          عرض الكل
        </a>
      </div>

      <div class="grid md:grid-cols-3 gap-6">
        {topClans.map((clan, index) => (
          <div class="military-card p-6 hover-lift">
            <div class="flex items-center gap-4 mb-4">
              <div class={`w-12 h-12 rounded-lg flex items-center justify-center text-white font-bold ${
                index === 0 ? 'bg-victory-gold text-black' : 
                index === 1 ? 'bg-neutral-silver text-black' : 
                'bg-command-blue'
              }`}>
                #{index + 1}
              </div>
              <div>
                <h3 class="font-bold">{clan.name}</h3>
                <p class="text-sm text-muted-foreground">
                  {clan.members} عضو
                </p>
              </div>
            </div>
            <div class="text-right">
              <div class="text-2xl font-bold text-primary">{clan.points.toLocaleString()}</div>
              <div class="text-sm text-muted-foreground">
                نقطة
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Recent Forum Posts -->
  <section class="py-20">
    <div class="container-custom">
      <div class="flex items-center justify-between mb-12">
        <div>
          <h2 class="text-3xl font-bold mb-2">
            آخر مواضيع المنتدى
          </h2>
          <p class="text-muted-foreground">
            أحدث المناقشات في المجتمع
          </p>
        </div>
        <a href="/ar/forum" class="btn btn-outline">
          زيارة المنتدى
        </a>
      </div>

      <div class="space-y-4">
        {recentPosts.map((post) => (
          <div class="military-card p-6 hover-lift">
            <div class="flex items-start justify-between">
              <div class="flex-1">
                <h3 class="font-semibold mb-2 hover:text-primary transition-colors">
                  <a href={`/ar/forum/posts/1`}>{post.title}</a>
                </h3>
                <div class="flex items-center gap-4 text-sm text-muted-foreground">
                  <span>بواسطة {post.author}</span>
                  <span>{post.replies} رد</span>
                  <span>{post.timeAgo}</span>
                </div>
              </div>
              <div class="text-left">
                <div class="w-10 h-10 bg-primary/20 rounded-full flex items-center justify-center">
                  <svg class="w-5 h-5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
                  </svg>
                </div>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Footer -->
  <footer slot="footer" class="py-12">
    <div class="container-custom">
      <div class="grid md:grid-cols-4 gap-8">
        <!-- Brand -->
        <div>
          <div class="flex items-center space-x-2 rtl:space-x-reverse mb-4">
            <div class="w-8 h-8 bg-gradient-to-br from-primary to-secondary rounded-lg flex items-center justify-center">
              <span class="text-white font-bold">ZH</span>
            </div>
            <span class="text-xl font-bold text-gradient">ZH-Love</span>
          </div>
          <p class="text-muted-foreground mb-4">
            المنصة الرسمية للاعبي جنرالز زيرو آور في الشرق الأوسط
          </p>
          <div class="flex space-x-4 rtl:space-x-reverse">
            <a href="#" class="text-muted-foreground hover:text-primary transition-colors">
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M24 4.557c-.883.392-1.832.656-2.828.775 1.017-.609 1.798-1.574 2.165-2.724-.951.564-2.005.974-3.127 1.195-.897-.957-2.178-1.555-3.594-1.555-3.179 0-5.515 2.966-4.797 6.045-4.091-.205-7.719-2.165-10.148-5.144-1.29 2.213-.669 5.108 1.523 6.574-.806-.026-1.566-.247-2.229-.616-.054 2.281 1.581 4.415 3.949 4.89-.693.188-1.452.232-2.224.084.626 1.956 2.444 3.379 4.6 3.419-2.07 1.623-4.678 2.348-7.29 2.04 2.179 1.397 4.768 2.212 7.548 2.212 9.142 0 14.307-7.721 13.995-14.646.962-.695 1.797-1.562 2.457-2.549z"/>
              </svg>
            </a>
            <a href="#" class="text-muted-foreground hover:text-primary transition-colors">
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M22.46 6c-.77.35-1.6.58-2.46.69.88-.53 1.56-1.37 1.88-2.38-.83.5-1.75.85-2.72 1.05C18.37 4.5 17.26 4 16 4c-2.35 0-4.27 1.92-4.27 4.29 0 .34.04.67.11.98C8.28 9.09 5.11 7.38 3 4.79c-.37.63-.58 1.37-.58 2.15 0 1.49.75 2.81 1.91 3.56-.71 0-1.37-.2-1.95-.5v.03c0 2.08 1.48 3.82 3.44 4.21a4.22 4.22 0 0 1-1.93.07 4.28 4.28 0 0 0 4 2.98 8.521 8.521 0 0 1-5.33 1.84c-.34 0-.68-.02-1.02-.06C3.44 20.29 5.7 21 8.12 21 16 21 20.33 14.46 20.33 8.79c0-.19 0-.37-.01-.56.84-.6 1.56-1.36 2.14-2.23z"/>
              </svg>
            </a>
            <a href="#" class="text-muted-foreground hover:text-primary transition-colors">
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M20.317 4.3698a19.7913 19.7913 0 00-4.8851-1.5152.0741.0741 0 00-.0785.0371c-.211.3753-.4447.8648-.6083 1.2495-1.8447-.2762-3.68-.2762-5.4868 0-.1636-.3933-.4058-.8742-.6177-1.2495a.077.077 0 00-.0785-.037 19.7363 19.7363 0 00-4.8852 1.515.0699.0699 0 00-.0321.0277C.5334 9.0458-.319 13.5799.0992 18.0578a.0824.0824 0 00.0312.0561c2.0528 1.5076 4.0413 2.4228 5.9929 3.0294a.0777.0777 0 00.0842-.0276c.4616-.6304.8731-1.2952 1.226-1.9942a.076.076 0 00-.0416-.1057c-.6528-.2476-1.2743-.5495-1.8722-.8923a.077.077 0 01-.0076-.1277c.1258-.0943.2517-.1923.3718-.2914a.0743.0743 0 01.0776-.0105c3.9278 1.7933 8.18 1.7933 12.0614 0a.0739.0739 0 01.0785.0095c.1202.099.246.1981.3728.2924a.077.077 0 01-.0066.1276 12.2986 12.2986 0 01-1.873.8914.0766.0766 0 00-.0407.1067c.3604.698.7719 1.3628 1.225 1.9932a.076.076 0 00.0842.0286c1.961-.6067 3.9495-1.5219 6.0023-3.0294a.077.077 0 00.0313-.0552c.5004-5.177-.8382-9.6739-3.5485-13.6604a.061.061 0 00-.0312-.0286zM8.02 15.3312c-1.1825 0-2.1569-1.0857-2.1569-2.419 0-1.3332.9555-2.4189 2.157-2.4189 1.2108 0 2.1757 1.0952 2.1568 2.419-.0189 1.3332-.9555 2.4189-2.1569 2.4189zm7.9748 0c-1.1825 0-2.1569-1.0857-2.1569-2.419 0-1.3332.9554-2.4189 2.1569-2.4189 1.2108 0 2.1757 1.0952 2.1568 2.419 0 1.3332-.9555 2.4189-2.1568 2.4189Z"/>
              </svg>
            </a>
          </div>
        </div>

        <!-- Links -->
        <div>
          <h3 class="font-semibold mb-4">الصفحات</h3>
          <ul class="space-y-2">
            <li><a href="/ar/about" class="text-muted-foreground hover:text-foreground transition-colors">حول المنصة</a></li>
            <li><a href="/ar/support" class="text-muted-foreground hover:text-foreground transition-colors">الدعم</a></li>
            <li><a href="/ar/game-info" class="text-muted-foreground hover:text-foreground transition-colors">معلومات اللعبة</a></li>
            <li><a href="/ar/contact" class="text-muted-foreground hover:text-foreground transition-colors">اتصل بنا</a></li>
          </ul>
        </div>

        <div>
          <h3 class="font-semibold mb-4">المجتمع</h3>
          <ul class="space-y-2">
            <li><a href="/ar/forum" class="text-muted-foreground hover:text-foreground transition-colors">المنتدى</a></li>

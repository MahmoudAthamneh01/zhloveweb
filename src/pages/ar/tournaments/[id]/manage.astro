---
import BaseLayout from '../../../../layouts/BaseLayout.astro';
import TournamentManagement from '../../../../components/tournaments/TournamentManagement';
---

<BaseLayout 
  title="إدارة البطولة - ZH-Love"
  description="إدارة شاملة للبطولة"
>
  <div class="min-h-screen bg-background">
    <!-- Tournament Header -->
    <div id="tournament-header" class="bg-gradient-to-r from-gray-900 via-green-900 to-gray-900 py-16">
      <div class="container mx-auto px-4">
        <div class="text-center">
          <h1 id="tournament-name" class="text-4xl font-bold text-white mb-4">
            جاري التحميل...
          </h1>
          <p class="text-xl text-gray-300">لوحة تحكم إدارة البطولة</p>
        </div>
      </div>
    </div>

    <div class="container mx-auto px-4 py-12">
      <!-- Tournament Overview -->
      <div class="bg-card border border-border rounded-lg p-6 mb-8">
        <div class="grid grid-cols-1 md:grid-cols-4 gap-6">
          <div class="text-center">
            <div id="participants-count" class="text-3xl font-bold text-green-400">0</div>
            <div class="text-gray-300">المشاركين</div>
          </div>
          <div class="text-center">
            <div id="applications-count" class="text-3xl font-bold text-yellow-400">0</div>
            <div class="text-gray-300">طلبات الانضمام</div>
          </div>
          <div class="text-center">
            <div id="matches-count" class="text-3xl font-bold text-blue-400">0</div>
            <div class="text-gray-300">المباريات</div>
          </div>
          <div class="text-center">
            <div id="prize-pool" class="text-3xl font-bold text-purple-400">$0</div>
            <div class="text-gray-300">الجوائز</div>
          </div>
        </div>
      </div>

      <!-- Quick Actions -->
      <div class="grid grid-cols-1 md:grid-cols-3 lg:grid-cols-6 gap-4 mb-8">
        <button
          id="view-tournament"
          class="flex items-center justify-center space-x-2 rtl:space-x-reverse p-4 bg-blue-600 hover:bg-blue-700 text-white rounded-lg transition-colors"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
          </svg>
          <span>عرض البطولة</span>
        </button>

        <button
          id="manage-participants"
          class="flex items-center justify-center space-x-2 rtl:space-x-reverse p-4 bg-green-600 hover:bg-green-700 text-white rounded-lg transition-colors"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.25 2.25 0 11-4.5 0 2.25 2.25 0 014.5 0z"></path>
          </svg>
          <span>إدارة المشاركين</span>
        </button>

        <button
          id="review-applications"
          class="flex items-center justify-center space-x-2 rtl:space-x-reverse p-4 bg-yellow-600 hover:bg-yellow-700 text-white rounded-lg transition-colors"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4"></path>
          </svg>
          <span>طلبات الانضمام</span>
        </button>

        <button
          id="manage-bracket"
          class="flex items-center justify-center space-x-2 rtl:space-x-reverse p-4 bg-purple-600 hover:bg-purple-700 text-white rounded-lg transition-colors"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
          </svg>
          <span>إدارة البراكت</span>
        </button>

        <button
          id="tournament-settings"
          class="flex items-center justify-center space-x-2 rtl:space-x-reverse p-4 bg-gray-600 hover:bg-gray-700 text-white rounded-lg transition-colors"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
          </svg>
          <span>الإعدادات</span>
        </button>

        <button
          id="view-reports"
          class="flex items-center justify-center space-x-2 rtl:space-x-reverse p-4 bg-orange-600 hover:bg-orange-700 text-white rounded-lg transition-colors"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 17v-2m3 2v-4m3 4v-6m2 10H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
          </svg>
          <span>التقارير</span>
        </button>
      </div>

      <!-- Management Interface -->
      <TournamentManagement client:load />
    </div>
  </div>

  <script>
    document.addEventListener('DOMContentLoaded', function() {
      let tournamentId = '';
      let tournament = null;

      // Initialize
      init();

      function init() {
        // Get tournament ID from URL
        const pathParts = window.location.pathname.split('/');
        tournamentId = pathParts[pathParts.length - 2];
        
        if (!tournamentId) {
          showError('معرف البطولة غير صحيح');
          return;
        }

        checkAuth();
        loadTournament();
        setupEventListeners();
      }

      function checkAuth() {
        const token = localStorage.getItem('zh_love_token');
        if (!token) {
          window.location.href = '/ar/login';
          return;
        }
      }

      async function loadTournament() {
        try {
          // Load tournament data
          const userTournaments = JSON.parse(localStorage.getItem('user_tournaments') || '[]');
          tournament = userTournaments.find(t => t.id == tournamentId);
          
          if (!tournament) {
            // Mock tournament data for demo
            tournament = {
              id: parseInt(tournamentId),
              name: 'بطولة الجنرالات الكبرى 2024',
              description: 'البطولة الأكبر والأهم في المجتمع العربي لجنرالز زيرو آور',
              status: 'open',
              participants: 89,
              maxParticipants: 128,
              prizePool: 2500,
              startDate: '2024-03-15T18:00:00',
              format: '1v1',
              gameMode: 'Generals Zero Hour',
              isPrivate: false,
              requireApproval: true,
              createdAt: '2024-02-01T10:00:00',
              createdBy: 'Current User'
            };
          }

          displayTournament();
          loadTournamentStats();
          
          // Send tournament data to management component
          setTimeout(() => {
            window.dispatchEvent(new CustomEvent('loadTournamentManagement', {
              detail: { tournament }
            }));
          }, 100);
          
        } catch (error) {
          console.error('Error loading tournament:', error);
          showError('فشل في تحميل بيانات البطولة');
        }
      }

      function displayTournament() {
        document.getElementById('tournament-name').textContent = tournament.name;
        document.getElementById('participants-count').textContent = tournament.participants || 0;
        document.getElementById('prize-pool').textContent = `$${tournament.prizePool}`;
      }

      function loadTournamentStats() {
        // Load applications
        const applications = JSON.parse(localStorage.getItem('tournament_applications') || '[]');
        const tournamentApplications = applications.filter(app => app.tournamentId == tournamentId);
        
        document.getElementById('applications-count').textContent = tournamentApplications.length;
        document.getElementById('matches-count').textContent = '0'; // Will be implemented later
      }

      function setupEventListeners() {
        // Quick action buttons
        document.getElementById('view-tournament').addEventListener('click', () => {
          window.location.href = `/ar/tournaments/${tournamentId}`;
        });

        document.getElementById('manage-participants').addEventListener('click', () => {
          // Switch to participants tab in management component
          switchManagementTab('participants');
        });

        document.getElementById('review-applications').addEventListener('click', () => {
          window.location.href = `/ar/tournaments/${tournamentId}/applications`;
        });

        document.getElementById('manage-bracket').addEventListener('click', () => {
          // Switch to bracket management
          switchManagementTab('bracket');
        });

        document.getElementById('tournament-settings').addEventListener('click', () => {
          // Switch to settings tab
          switchManagementTab('settings');
        });

        document.getElementById('view-reports').addEventListener('click', () => {
          // Switch to reports tab
          switchManagementTab('reports');
        });
      }

      function switchManagementTab(tabId) {
        // This will be handled by the TournamentManagement component
        const event = new CustomEvent('switchManagementTab', {
          detail: { tabId }
        });
        window.dispatchEvent(event);
      }

      function showError(message) {
        const toast = document.createElement('div');
        toast.className = 'fixed top-4 right-4 bg-red-600 text-white px-6 py-3 rounded-lg z-50 shadow-lg';
        toast.textContent = message;
        document.body.appendChild(toast);
        setTimeout(() => {
          if (document.body.contains(toast)) {
            document.body.removeChild(toast);
          }
        }, 5000);
      }
    });
  </script>
</BaseLayout> 
---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import TournamentBracket from '../../../components/tournaments/TournamentBracket';
import TournamentUpdates from '../../../components/tournaments/TournamentUpdates';
import TournamentManagement from '../../../components/tournaments/TournamentManagement';
import { tournaments, getTournamentById } from '../../../utils/tournamentsData.js';

export async function getStaticPaths() {
  // Use local tournament data instead of API
  return tournaments.map((tournament) => ({
    params: { id: tournament.id.toString() }
  }));
}

// Get tournament data
const { id } = Astro.params;
const tournament = getTournamentById(id);

// If tournament not found, return 404
if (!tournament) {
  return Astro.redirect('/404');
}
---

<BaseLayout 
  title={`${tournament.name} - ZH-Love`}
  description={tournament.description}
>
  <div class="min-h-screen bg-background">
    <!-- Tournament Header -->
    <div class="relative bg-gradient-to-r from-gray-900 via-green-900 to-gray-900 py-16">
      <div class="absolute inset-0 bg-black opacity-50"></div>
      {tournament.banner && (
        <div class="absolute inset-0 bg-cover bg-center opacity-30" style={`background-image: url('${tournament.banner}')`}></div>
      )}
      <div class="relative container mx-auto px-4">
        <div class="flex flex-col lg:flex-row items-start lg:items-center justify-between mb-8">
          <div class="flex-1">
            <div class="flex items-center space-x-4 rtl:space-x-reverse mb-4">
              <h1 class="text-4xl font-bold text-white">{tournament.name}</h1>
              <span class={`px-4 py-2 text-sm font-bold rounded-full text-white ${tournament.status === 'registration_open' ? 'bg-green-600' : tournament.status === 'in_progress' ? 'bg-red-600' : tournament.status === 'completed' ? 'bg-blue-600' : 'bg-gray-600'}`}>
                {tournament.status === 'registration_open' ? 'التسجيل مفتوح' : 
                 tournament.status === 'in_progress' ? 'جارية' : 
                 tournament.status === 'completed' ? 'مكتملة' : 'قريباً'}
              </span>
              {tournament.status === 'in_progress' && (
                <div class="flex items-center space-x-2 rtl:space-x-reverse bg-red-600 px-3 py-1 rounded-full">
                  <div class="w-2 h-2 bg-white rounded-full animate-pulse"></div>
                  <span class="text-white text-sm font-bold">LIVE</span>
                </div>
              )}
            </div>
            
            <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
              <div class="text-center">
                <div class="text-2xl font-bold text-green-400">{tournament.participants}/{tournament.maxParticipants}</div>
                <div class="text-gray-400">المشاركين</div>
              </div>
              {tournament.prizePool > 0 && (
                <div class="text-center">
                  <div class="text-2xl font-bold text-yellow-400">${tournament.prizePool}</div>
                  <div class="text-gray-400">الجائزة</div>
                </div>
              )}
              <div class="text-center">
                <div class="text-2xl font-bold text-blue-400">{new Date(tournament.startDate).toLocaleDateString('ar-EG')}</div>
                <div class="text-gray-400">تاريخ البداية</div>
              </div>
              <div class="text-center">
                <div class="text-2xl font-bold text-purple-400">{tournament.format}</div>
                <div class="text-gray-400">النوع</div>
              </div>
            </div>
          </div>
          
          {tournament.image && (
            <div class="mt-6 lg:mt-0 lg:ml-8">
              <img src={tournament.image} alt={tournament.name} 
                   class="w-32 h-32 rounded-lg object-cover border-2 border-green-500/30">
            </div>
          )}
        </div>
      </div>
    </div>

    <div class="container mx-auto px-4 py-8">
      <!-- Tournament Navigation -->
      <div class="bg-card border border-border rounded-lg p-1 mb-8 inline-flex">
        <button id="tab-overview" class="tab-button px-6 py-3 rounded-md text-sm font-medium transition-colors bg-green-600 text-white" data-tab="overview">
          نظرة عامة
        </button>
        <button id="tab-bracket" class="tab-button px-6 py-3 rounded-md text-sm font-medium transition-colors text-gray-400 hover:text-white" data-tab="bracket">
          البراكت
        </button>
        <button id="tab-participants" class="tab-button px-6 py-3 rounded-md text-sm font-medium transition-colors text-gray-400 hover:text-white" data-tab="participants">
          المشاركين
        </button>
        <button id="tab-updates" class="tab-button px-6 py-3 rounded-md text-sm font-medium transition-colors text-gray-400 hover:text-white" data-tab="updates">
          التحديثات
        </button>
      </div>

      <!-- Tab Content -->
      <div id="tab-content">
        <!-- Overview Tab -->
        <div id="content-overview" class="tab-content">
          <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
            <!-- Main Info -->
            <div class="lg:col-span-2 space-y-6">
              <!-- Tournament Description -->
              <div class="bg-card border border-border rounded-lg p-6">
                <h2 class="text-xl font-semibold text-white mb-4">وصف البطولة</h2>
                <div class="text-gray-300 leading-relaxed">{tournament.description}</div>
              </div>

              <!-- Tournament Rules -->
              <div class="bg-card border border-border rounded-lg p-6">
                <h2 class="text-xl font-semibold text-white mb-4">قوانين البطولة</h2>
                <div class="text-gray-300 leading-relaxed whitespace-pre-line">{tournament.rules}</div>
              </div>

              <!-- Maps -->
              <div class="bg-card border border-border rounded-lg p-6">
                <h2 class="text-xl font-semibold text-white mb-4">الخرائط المسموحة</h2>
                <div class="grid grid-cols-2 md:grid-cols-3 gap-3">
                  {tournament.maps.map(map => (
                    <div class="bg-gray-800 rounded-lg p-3 text-center">
                      <div class="text-white font-medium">{map}</div>
                    </div>
                  ))}
                </div>
              </div>

              <!-- Prizes -->
              {tournament.prizePool > 0 && (
                <div class="bg-card border border-border rounded-lg p-6">
                  <h2 class="text-xl font-semibold text-white mb-4">توزيع الجوائز</h2>
                  <div class="space-y-3">
                    {tournament.format === '1v1' && (
                      <>
                        <div class="flex items-center justify-between p-3 bg-gray-800 rounded-lg">
                          <div class="flex items-center space-x-3 rtl:space-x-reverse">
                            <div class="w-8 h-8 rounded-full bg-gradient-to-r from-yellow-400 to-yellow-600 flex items-center justify-center text-white font-bold text-sm">1</div>
                            <span class="text-white">البطل</span>
                          </div>
                          <span class="text-yellow-400 font-bold">${(tournament.prizePool * 0.5).toFixed(2)}</span>
                        </div>
                        <div class="flex items-center justify-between p-3 bg-gray-800 rounded-lg">
                          <div class="flex items-center space-x-3 rtl:space-x-reverse">
                            <div class="w-8 h-8 rounded-full bg-gradient-to-r from-gray-300 to-gray-500 flex items-center justify-center text-white font-bold text-sm">2</div>
                            <span class="text-white">الوصيف</span>
                          </div>
                          <span class="text-yellow-400 font-bold">${(tournament.prizePool * 0.3).toFixed(2)}</span>
                        </div>
                        <div class="flex items-center justify-between p-3 bg-gray-800 rounded-lg">
                          <div class="flex items-center space-x-3 rtl:space-x-reverse">
                            <div class="w-8 h-8 rounded-full bg-gradient-to-r from-amber-600 to-amber-800 flex items-center justify-center text-white font-bold text-sm">3</div>
                            <span class="text-white">المركز الثالث</span>
                          </div>
                          <span class="text-yellow-400 font-bold">${(tournament.prizePool * 0.2).toFixed(2)}</span>
                        </div>
                      </>
                    )}
                  </div>
                </div>
              )}
            </div>

            <!-- Sidebar -->
            <div class="space-y-6">
              <!-- Quick Info -->
              <div class="bg-card border border-border rounded-lg p-6">
                <h3 class="text-lg font-semibold text-white mb-4">معلومات سريعة</h3>
                <div class="space-y-3">
                  <div class="flex justify-between">
                    <span class="text-gray-400">النوع:</span>
                    <span class="text-white">{tournament.type === 'single_elimination' ? 'إقصاء مفرد' : tournament.type}</span>
                  </div>
                  <div class="flex justify-between">
                    <span class="text-gray-400">نمط اللعب:</span>
                    <span class="text-white">{tournament.format}</span>
                  </div>
                  <div class="flex justify-between">
                    <span class="text-gray-400">الموارد:</span>
                    <span class="text-white">{tournament.resources}</span>
                  </div>
                  <div class="flex justify-between">
                    <span class="text-gray-400">المنطقة:</span>
                    <span class="text-white">{tournament.region === 'middle_east' ? 'الشرق الأوسط' : tournament.region}</span>
                  </div>
                  <div class="flex justify-between">
                    <span class="text-gray-400">المنظم:</span>
                    <span class="text-white">{tournament.organizerName}</span>
                  </div>
                  {tournament.entryFee > 0 && (
                    <div class="flex justify-between">
                      <span class="text-gray-400">رسوم الاشتراك:</span>
                      <span class="text-white">${tournament.entryFee}</span>
                    </div>
                  )}
                  <div class="flex justify-between">
                    <span class="text-gray-400">آخر تسجيل:</span>
                    <span class="text-white">{new Date(tournament.registrationEnd).toLocaleDateString('ar-EG')}</span>
                  </div>
                </div>
              </div>

              <!-- Tournament Status -->
              <div class="bg-card border border-border rounded-lg p-6">
                <h3 class="text-lg font-semibold text-white mb-4">حالة البطولة</h3>
                <div class="space-y-3">
                  <div class="flex items-center justify-between">
                    <span class="text-gray-400">الحالة:</span>
                    <span class={`px-3 py-1 rounded-full text-sm font-medium ${tournament.status === 'registration_open' ? 'bg-green-600 text-white' : tournament.status === 'in_progress' ? 'bg-red-600 text-white' : 'bg-gray-600 text-white'}`}>
                      {tournament.status === 'registration_open' ? 'التسجيل مفتوح' : 
                       tournament.status === 'in_progress' ? 'جارية' : 
                       tournament.status === 'completed' ? 'مكتملة' : 'قريباً'}
                    </span>
                  </div>
                  <div class="flex items-center justify-between">
                    <span class="text-gray-400">المشاركين:</span>
                    <span class="text-white">{tournament.participants}/{tournament.maxParticipants}</span>
                  </div>
                  <div class="w-full bg-gray-700 rounded-full h-2">
                    <div class="bg-green-600 h-2 rounded-full" style={`width: ${(tournament.participants / tournament.maxParticipants) * 100}%`}></div>
                  </div>
                </div>
              </div>

              <!-- Contact Info -->
              <div class="bg-card border border-border rounded-lg p-6">
                <h3 class="text-lg font-semibold text-white mb-4">التواصل</h3>
                <div class="space-y-3">
                  {tournament.organizerContact.discord && (
                    <a href={tournament.organizerContact.discord} target="_blank" class="flex items-center space-x-2 rtl:space-x-reverse text-blue-400 hover:text-blue-300 transition-colors">
                      <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M20.317 4.37a19.791 19.791 0 0 0-4.885-1.515a.074.074 0 0 0-.079.037c-.21.375-.444.864-.608 1.25a18.27 18.27 0 0 0-5.487 0a12.64 12.64 0 0 0-.617-1.25a.077.077 0 0 0-.079-.037A19.736 19.736 0 0 0 3.677 4.37a.07.07 0 0 0-.032.027C.533 9.046-.32 13.58.099 18.057a.082.082 0 0 0 .031.057a19.9 19.9 0 0 0 5.993 3.03a.078.078 0 0 0 .084-.028a14.09 14.09 0 0 0 1.226-1.994a.076.076 0 0 0-.041-.106a13.107 13.107 0 0 1-1.872-.892a.077.077 0 0 1-.008-.128a10.2 10.2 0 0 0 .372-.292a.074.074 0 0 1 .077-.01c3.928 1.793 8.18 1.793 12.062 0a.074.074 0 0 1 .078.01c.12.098.246.198.373.292a.077.077 0 0 1-.006.127a12.299 12.299 0 0 1-1.873.892a.077.077 0 0 0-.041.107c.36.698.772 1.362 1.225 1.993a.076.076 0 0 0 .084.028a19.839 19.839 0 0 0 6.002-3.03a.077.077 0 0 0 .032-.054c.5-5.177-.838-9.674-3.549-13.66a.061.061 0 0 0-.031-.03zM8.02 15.33c-1.183 0-2.157-1.085-2.157-2.419c0-1.333.956-2.419 2.157-2.419c1.21 0 2.176 1.096 2.157 2.42c0 1.333-.956 2.418-2.157 2.418zm7.975 0c-1.183 0-2.157-1.085-2.157-2.419c0-1.333.955-2.419 2.157-2.419c1.21 0 2.176 1.096 2.157 2.42c0 1.333-.946 2.418-2.157 2.418z"/>
                      </svg>
                      <span>Discord</span>
                    </a>
                  )}
                  {tournament.organizerContact.telegram && (
                    <a href={tournament.organizerContact.telegram} target="_blank" class="flex items-center space-x-2 rtl:space-x-reverse text-blue-400 hover:text-blue-300 transition-colors">
                      <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M11.944 0A12 12 0 0 0 0 12a12 12 0 0 0 12 12a12 12 0 0 0 12-12A12 12 0 0 0 12 0a12 12 0 0 0-.056 0zm4.962 7.224c.1-.002.321.023.465.14a.506.506 0 0 1 .171.325c.016.093.036.306.02.472c-.18 1.898-.962 6.502-1.36 8.627c-.168.9-.499 1.201-.82 1.23c-.696.065-1.225-.46-1.9-.902c-1.056-.693-1.653-1.124-2.678-1.8c-1.185-.78-.417-1.21.258-1.91c.177-.184 3.247-2.977 3.307-3.23c.007-.032.014-.15-.056-.212s-.174-.041-.249-.024c-.106.024-1.793 1.14-5.061 3.345c-.48.33-.913.49-1.302.48c-.428-.008-1.252-.241-1.865-.44c-.752-.245-1.349-.374-1.297-.789c.027-.216.325-.437.893-.663c3.498-1.524 5.83-2.529 6.998-3.014c3.332-1.386 4.025-1.627 4.476-1.635z"/>
                      </svg>
                      <span>Telegram</span>
                    </a>
                  )}
                  {tournament.organizerContact.email && (
                    <a href={`mailto:${tournament.organizerContact.email}`} class="flex items-center space-x-2 rtl:space-x-reverse text-blue-400 hover:text-blue-300 transition-colors">
                      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                      </svg>
                      <span>البريد الإلكتروني</span>
                    </a>
                  )}
                </div>
              </div>

              <!-- Action Buttons -->
              <div class="space-y-3">
                {tournament.status === 'registration_open' && (
                  <button onclick="joinTournament()" class="w-full px-6 py-3 bg-green-600 hover:bg-green-700 text-white rounded-lg transition-colors font-medium">
                    الانضمام للبطولة
                  </button>
                )}
                {tournament.status === 'in_progress' && (
                  <button onclick="watchLive()" class="w-full px-6 py-3 bg-red-600 hover:bg-red-700 text-white rounded-lg transition-colors font-medium">
                    مشاهدة مباشرة
                  </button>
                )}
                {tournament.status === 'completed' && (
                  <button onclick="viewResults()" class="w-full px-6 py-3 bg-blue-600 hover:bg-blue-700 text-white rounded-lg transition-colors font-medium">
                    عرض النتائج
                  </button>
                )}
                <button onclick="shareTournament()" class="w-full px-6 py-3 bg-gray-600 hover:bg-gray-700 text-white rounded-lg transition-colors font-medium">
                  مشاركة البطولة
                </button>
              </div>
            </div>
          </div>
        </div>

        <!-- Bracket Tab -->
        <div id="content-bracket" class="tab-content hidden">
          <div class="bg-card border border-border rounded-lg p-6">
            <h2 class="text-xl font-semibold text-white mb-4">براكت البطولة</h2>
            <div class="text-center py-12">
              <div class="text-6xl mb-4">🏆</div>
              <h3 class="text-xl font-semibold text-white mb-2">براكت البطولة</h3>
              <p class="text-gray-400 mb-6">سيتم عرض براكت البطولة هنا عند بداية المباريات</p>
              <button class="px-6 py-3 bg-green-600 hover:bg-green-700 text-white rounded-lg transition-colors">
                عرض البراكت الكامل
              </button>
            </div>
          </div>
        </div>

        <!-- Participants Tab -->
        <div id="content-participants" class="tab-content hidden">
          <div class="bg-card border border-border rounded-lg p-6">
            <div class="flex items-center justify-between mb-6">
              <h2 class="text-xl font-semibold text-white">المشاركين ({tournament.participants})</h2>
              <button class="px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white rounded-lg transition-colors text-sm">
                تصدير القائمة
              </button>
            </div>
            
            <div class="text-center py-12">
              <div class="text-6xl mb-4">👥</div>
              <h3 class="text-xl font-semibold text-white mb-2">قائمة المشاركين</h3>
              <p class="text-gray-400 mb-6">سيتم عرض قائمة المشاركين المؤكدين هنا</p>
              <div class="text-sm text-gray-500">
                المشاركين المؤكدين: {tournament.participants} / {tournament.maxParticipants}
              </div>
            </div>
          </div>
        </div>

        <!-- Updates Tab -->
        <div id="content-updates" class="tab-content hidden">
          <div class="bg-card border border-border rounded-lg p-6">
            <h2 class="text-xl font-semibold text-white mb-4">تحديثات البطولة</h2>
            <div class="text-center py-12">
              <div class="text-6xl mb-4">📢</div>
              <h3 class="text-xl font-semibold text-white mb-2">تحديثات البطولة</h3>
              <p class="text-gray-400 mb-6">سيتم عرض آخر التحديثات والأخبار هنا</p>
              <button class="px-6 py-3 bg-green-600 hover:bg-green-700 text-white rounded-lg transition-colors">
                الاشتراك في التحديثات
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script define:vars={{ tournament }}>
    document.addEventListener('DOMContentLoaded', function() {
      // Tab navigation
      const tabButtons = document.querySelectorAll('.tab-button');
      const tabContents = document.querySelectorAll('.tab-content');

      tabButtons.forEach(button => {
        button.addEventListener('click', () => {
          const tabName = button.dataset.tab;
          
          // Update button states
          tabButtons.forEach(btn => {
            btn.classList.remove('bg-green-600', 'text-white');
            btn.classList.add('text-gray-400', 'hover:text-white');
          });
          button.classList.remove('text-gray-400', 'hover:text-white');
          button.classList.add('bg-green-600', 'text-white');
          
          // Update content visibility
          tabContents.forEach(content => {
            content.classList.add('hidden');
          });
          document.getElementById(`content-${tabName}`).classList.remove('hidden');
        });
      });

      // Tournament actions
      window.joinTournament = function() {
        const user = JSON.parse(localStorage.getItem('zh_love_user') || '{}');
        if (!user.id) {
          alert('يرجى تسجيل الدخول أولاً للانضمام للبطولة');
          window.location.href = '/ar/login';
          return;
        }
        
        // Redirect to tournament application page
        window.location.href = `/ar/tournaments/${tournament.id}/join`;
      };

      window.watchLive = function() {
        if (tournament.streamUrl) {
          window.open(tournament.streamUrl, '_blank');
        } else {
          alert('رابط البث المباشر غير متاح حالياً');
        }
      };

      window.viewResults = function() {
        window.location.href = `/ar/tournaments/${tournament.id}/results`;
      };

      window.shareTournament = function() {
        if (navigator.share) {
          navigator.share({
            title: tournament.name,
            text: tournament.description,
            url: window.location.href
          });
        } else {
          navigator.clipboard.writeText(window.location.href);
          alert('تم نسخ رابط البطولة');
        }
      };
    });
  </script>
</BaseLayout> 
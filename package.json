{
  "name": "zh-love",
  "type": "module",
  "version": "1.0.0",
  "description": "ZH-Love Gaming Community Platform for Command & Conquer: Generals Zero Hour",
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro check && astro build",
    "preview": "astro preview",
    "astro": "astro",
    "backend": "cd backend && php -S localhost:8080 -t public",
